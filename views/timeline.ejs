<!DOCTYPE html>
<html lang="en">
	<head>
		<%- include header %>
		<link rel="stylesheet" type="text/css" href="css/events.css">
	</head>
	<img src="img/card.png" width="100%" class="back">
	<body>
		<%- include navbar %>
		<div class="fs-container">
			<header class="clearfix">
				<h1><%= title %></h1>
				<!-- <p>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<a href="/upload"><button class="btn btn-inverse">&#10010;</button>&nbsp;&nbsp;&nbsp;加一篇文章</a></p>  -->
			</header>
			<div class="main">
			<!-- <a href="/upload">加加</a> -->
				<ul class="cbp_tmtimeline">
					<% events.forEach( function ( event ){ %>
					<li>
						<time class="cbp_tmtime">
							<span><h3 class="time_dec"><%= event.date %></h3></span>
						</time>
						<div class="cbp_tmicon cbp_tmicon-mail"></div>
						<div class="cbp_tmlabel">
							<div class="fs-title">
								<h2><%= event.title %></h2>
							</div>
							<div class="fs-content" id="content<%= event.id %>">
								<div class="container-fluid">
									<div class="col-sm-5">
										<br>
										<img class="img_dec" src="<%= event.pic %>" width="100%">
										<br>		
									</div>
									<div class="col-sm-7">
										<p><%= event.content %></p>
									</div>
								</div>
							</div>
						</div>
					</li>

					<% }); %>
					
				</ul>
			</div>
		</div>

		<%- include footer %>
		
		<script type="text/javascript" src="js/timeline.js"></script>
		<script type="text/javascript">
			$(document).ready(function () {
				$('#nav-timeline').addClass('active');
			});
		</script>
	</body>
</html>
