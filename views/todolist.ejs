<!DOCTYPE html>
<html lang="en">
	<head>
		<%- include header %>
		<link rel="stylesheet" type="text/css" href="css/events.css">
	</head>
	<img src="img/card.png" width="100%" class="back">
	<body>
		<%- include navbar %>
		<div class="fs-container">
			<header class="clearfix">
				<h1><%= title %></h1>
			</header>
			<div class="main">
				<ul>
					<li  class="col-md-3">
					<img src="img/sticker.png" width="100%" class="back">
						<form enctype="multipart/form-data" role="form" action="/todolist/create" method="post">
    						<div>
    							<label>User</label><br>
      							<input class="input" type="text" name="user" placeholder="bo"/><br>
	      						<label>Date</label><br>
	      						<input class="input" type="text" name="date" placeholder="2014/6/30"/><br>
	    						<label>Content</label><br>
	      						<textarea type="text" name="content" id="content" class="form-control input-md" rows="3" placeholder="要記得寫信"></textarea><br><br>
	      						<button class="btn btn-info" type="submit">submit</button>
      						</div>
  						</form>
  					</li>
					<% todos.forEach( function ( todo ){ %>
					<li  class="col-md-3">
						<div class="col-md-6">
							<h2><%= todo.user %></h2>
						</div>
						<div class="col-md-6">
							<br>
							<p class="pull-right"><%= todo.date %></p>
						</div>
						<p><%= todo.content %></p>
						<p class="pull-right"><a href="todolist/destroy/<%= todo.todo_id %>">刪除</p>
					</li>
					<% }); %>
				</ul>
			</div>
		</div>

		<%- include footer %>
		
		<script type="text/javascript">
			$(document).ready(function () {
				$('#nav-todolist').addClass('active');
			});
		</script>
	</body>
</html>
