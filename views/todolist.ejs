<!DOCTYPE html>
<html lang="en">
	<head>
		<%- include header %>
		<link rel="stylesheet" type="text/css" href="css/events.css">
		<link rel="stylesheet" type="text/css" href="css/todo.css">
	</head>
	<img src="img/card.png" width="100%" class="back">
	<body>
		<%- include navbar %>
		<div class="fs-container">
			<header class="clearfix">
				<h1><%= title %></h1>
			</header>
			<div class="main">
				<ul id="tag">
					<li  class="col-md-3 sticker">
						<form enctype="multipart/form-data" role="form" action="/todolist/create" method="post">
    						<div>
    							<br>
    							<label>User</label><br>
      							<input class="input" type="text" name="user" placeholder="bo"/><br><br>
	      						<label>Date</label><br>
	      						<input class="input" type="text" name="date" placeholder="2014/6/30"/><br><br>
	    						<label>Content</label><br>
	      						<textarea type="text" name="content" id="content" class="form-control input-md" rows="2" placeholder="要記得寫信"></textarea><br>
	      						<button class="btn submit col-md-12" type="submit"><strong>submit</strong></button>
	      						<br>
	      						<br>
      						</div>
  						</form>
  					</li>
					<li  class="col-md-1">
  					</li>
						<% todos.forEach( function ( todo ){ %>
							<div class="place" id="<%= todo.todo_id %>">
							  <% if(todo.is_done==0){ %>
								<li class="col-md-3 sticker">
							  <% }else{ %>
								<li class="col-md-3 is_done">
  							  <% } %>
								<h2><%= todo.user %>'s work</h2>
								<p><%= todo.date %></p>
			   					<div>
				   					<a href="#" class="btn done col-md-5 pull-left"><strong>done</strong></a>
			   						<a href="todolist/destroy/<%= todo.todo_id %>" class="btn delete col-md-5 pull-right"><strong>delete</strong></a>
			   						</div>
			   						<br><br>
			   						<div><%= todo.content %></div>
									<p></p>
								</li>
								<li  class="col-md-1">
			  					</li>
		  					</div>
						<% }); %>
				</ul>
			</div>
		</div>

		<%- include footer %>
		
		<script type="text/javascript">
			$(document).ready(function () {
				$('#nav-todolist').addClass('active');
			});
		</script>
		<script type="text/javascript" src="js/todo.js"></script>
	</body>
</html>
